extends baseEmail 

block emailContent
  tr
    td.es-p15t.es-p15b(align='center')
      h1(style='color: #333333; font-size: 20px; font-weight: normal;')
        b Creación de Usuario!
  tr
    td.es-p40r.es-p40l(align='center')
      p 
      | Hola, 
      span(style='font-weight: bold;') #{names} #{surnames}
  tr
    td.es-p35r.es-p40l(align='center')
      p
        | Se ha creado un usuario con el correo
        | #{email} con la siguiente contraseña 
        span(style='font-weight: bold;') #{password} 
        | por favor incia sesión para
        | proceder con el cambio.
  tr
    td.es-p40t.es-p40b.es-p10r.es-p10l(align='center')
      span.msohide.es-button-border
        a.es-button(href='https://google.com/', target='_blank') INICIAR SESIÓN